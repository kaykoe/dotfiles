{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"autoupdate": true,
	"permission": {
		"read": {
			"*": "allow",
			"*.env": "deny",
			"*.env.*": "deny",
			"*.env.example": "allow"
		},
		"edit": "allow",
		"bash": {
			"*": "ask",
			"git status *": "allow",
			"git log *": "allow",
			"git diff *": "allow",
			"git branch *": "allow",
			"git add *": "allow",
			"git commit *": "allow",
			"ls *": "allow",
			"pwd": "allow",
			"which *": "allow",
			"cat *": "allow",
			"head *": "allow",
			"tail *": "allow",
			"grep *": "allow",
			"find *": "allow",
			"npm list *": "allow",
			"npm info *": "allow",
			"rm -rf /*": "deny",
			"rm -rf /": "deny",
			"rm -rf *": "deny",
			"rm -r *": "deny",
			"rm -fr *": "deny",
			"sudo rm *": "deny",
			"sudo *": "ask",
			"git push --force *": "deny",
			"git push -f *": "deny",
			"git reset --hard *": "deny",
			"dd *": "deny",
			"mkfs *": "deny",
			"> /dev/*": "deny"
		},
		"webfetch": "allow",
		"external_directory": "ask",
		"doom_loop": "ask"
	},
}
